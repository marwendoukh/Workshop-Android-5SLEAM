<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="tn.sleam.five.marwen.a5sleam.sqlite.AddCandidate">

    <EditText
        android:id="@+id/id_candidate_addCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id" />

    <EditText
        android:id="@+id/nom_candidate_addCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nom" />

    <EditText
        android:id="@+id/poste_candidate_addCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="poste" />

    <Button
        android:id="@+id/save_candidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save" />


    <Button
        android:id="@+id/retreive_candidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retreive" />

</LinearLayout>
